{
  "name": "fhir-controller-cli",
  "version": "1.1.0",
  "description": "FHIR Controller CLI utilities.",
  "main": "index.js",
  "bin": {
    "fhir-controller": "./build/bin/fhir-controller.js"
  },
  "scripts": {
    "clean": "rm -rf ./build",
    "compile": "npx tsc && chmod +x ./build/bin/*",
    "copy-files": "mkdir -p build/assets && cp -R src/assets/ build/assets/",
    "build": "npm run clean && npm run compile && npm run copy-files",
    "package": "npm run build && npm pack",
    "test": "jest",
    "test-watch": "nodemon --watch '{src,test}/**' --ext 'ts,md,json' --exec 'npx jest'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/preston/fhir-controller-cli.git"
  },
  "keywords": [
    "Clinical",
    "Quality",
    "Language",
    "CQL",
    "CDS",
    "FHIR",
    "cql",
    "HAPI"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/preston/fhir-controller-cli/issues"
  },
  "homepage": "https://github.com/preston/fhir-controller-cli#README",
  "dependencies": {
    "axios": "^1.12.2",
    "commander": "^14.0.1",
    "csv-parser": "^3.2.0",
    "ts-progress": "^0.1.9"
  },
  "devDependencies": {
    "@types/fhir": "^0.0.41",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2"
  }
}